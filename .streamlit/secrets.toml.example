# =============================================================================
# CONFIGURATION DES SECRETS POUR BIOGNN
# =============================================================================
# Ce fichier doit être copié en 'secrets.toml' et configuré selon votre environnement
#
# Pour Streamlit Cloud:
#   Copiez le contenu nécessaire dans Settings > Secrets
#
# Pour plus d'informations sur les secrets:
#   https://docs.streamlit.io/streamlit-community-cloud/deploy-your-app/secrets-management
# =============================================================================

# Variables générales
my_name = "Victor"

# -----------------------------------------------------------------------------
# CONFIGURATION DES URLs D'API
# -----------------------------------------------------------------------------
# L'application utilisera les URLs dans l'ordre de priorité suivant:
#   1. Variable d'environnement API_URL (si définie)
#   2. local_api_uri (si use_local_api = true)
#   3. local_docker_uri (si use_docker_api = true)
#   4. cloud_api_uri (si défini)
#   5. URL GCP par défaut dans le code
# -----------------------------------------------------------------------------

# URL de l'API Cloud (Production - Streamlit Cloud)
# Cette URL sera utilisée par défaut en production
cloud_api_uri = "https://biognn-api-271034908172.europe-west1.run.app/"

# URL de l'API locale (pour développement en local)
# Utilisée uniquement si use_local_api = true
local_api_uri = "http://localhost:8000"

# URL de l'API Docker locale
# Utilisée uniquement si use_docker_api = true
local_docker_uri = "http://localhost:8080"

# -----------------------------------------------------------------------------
# FLAGS DE CONFIGURATION
# -----------------------------------------------------------------------------
# Décommenter et mettre à true pour forcer l'utilisation d'une API spécifique

# Forcer l'utilisation de l'API locale (développement)
# use_local_api = true

# Forcer l'utilisation de l'API Docker locale
# use_docker_api = true

# -----------------------------------------------------------------------------
# EXEMPLES D'UTILISATION
# -----------------------------------------------------------------------------
#
# 1. PRODUCTION (Streamlit Cloud):
#    - Copier uniquement cloud_api_uri dans les secrets Streamlit Cloud
#    - Ne pas définir use_local_api ni use_docker_api
#
# 2. DÉVELOPPEMENT LOCAL avec API distante:
#    - Copier ce fichier en secrets.toml
#    - Ne pas définir use_local_api ni use_docker_api
#    - L'app utilisera cloud_api_uri
#
# 3. DÉVELOPPEMENT LOCAL avec API locale:
#    - Copier ce fichier en secrets.toml
#    - Décommenter use_local_api = true
#    - Vérifier que local_api_uri pointe vers votre API locale
#
# 4. DÉVELOPPEMENT LOCAL avec Docker:
#    - Copier ce fichier en secrets.toml
#    - Décommenter use_docker_api = true
#    - Vérifier que local_docker_uri pointe vers votre conteneur
#
# 5. OVERRIDE avec variable d'environnement:
#    - Définir API_URL dans votre environnement
#    - Exemple: export API_URL="http://localhost:5000/"
#    - Cette méthode a la priorité sur toutes les autres
# -----------------------------------------------------------------------------

# Autres sections (optionnel)
[my_cool_secrets]
things_i_like = ["Streamlit", "Python", "BioGNN"]
